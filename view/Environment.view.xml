<mvc:View
	height="100%"
	controllerName="sap.ui.demo.toolpageapp.controller.Environment"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page
		showHeader="true"
		enableScrolling="false"
		title = "{i18n>customerOverviewTitle}">
		<TileContainer
			id="container"
			tiles="{/customers}">
			<StandardTile
				title="{name}"
				info="{provider} {productId}"
				number="{amount}"
				numberUnit="VMs"
				press="onTilePress"/>
		</TileContainer>
		<footer>
			<Toolbar>
				
			</Toolbar>
		</footer>
	</Page>
</mvc:View>
